@prefix roboprof: <http://roboprof.org/schema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix dbpedia_o: <http://dbpedia.org/ontology/> .
@prefix schema: <http://schema.org/>.

# classes

# 1. Lectures
# 1.1 lecture content - a. slide b. worksheets c.worksheets d.assignments

roboprof:Lectures
    a rdfs:Class;
    rdfs:label "Lectures"@en;
    rdfs:comment "Lectures of the course"@en.

# Class for lecture content
roboprof:LectureContent
    a rdfs:Class;
    rdfs:subClassOf roboprof:Lectures;
    rdfs:label "Lecture Content"@en;
    rdfs:comment "class for various types of content associated with a lecture."@en.

# Property for lecture number
roboprof:lectureNumber
    a rdfs:Property;
    rdfs:domain roboprof:Lectures;
    rdfs:range rdfs:Literal;
    rdfs:label "lecture number"@en;
    rdfs:comment "Lecture number."@en.

# Property for lecture name
roboprof:lectureName
    a rdfs:Property;
    rdfs:domain roboprof:Lectures;
    rdfs:range rdfs:Literal;
    rdfs:label "lecture name"@en;
    rdfs:comment "Name of the lecture"@en.

# subclasses of lecture content

roboprof:Slides
    a rdfs:Class;
    rdfs:subClassOf roboprof:LectureContent;
    rdfs:label "Slides"@en;
    rdfs:comment "Presentation displayed in a lecture."@en.

roboprof:Worksheets
    a rdfs:Class;
    rdfs:subClassOf roboprof:LectureContent;
    rdfs:label "Worksheets"@en;
    rdfs:comment "Worksheets provided during a lecture."@en.

roboprof:Assignments
    a rdfs:Class;
    rdfs:subClassOf roboprof:LectureContent;
    rdfs:label "Assignments"@en;
    rdfs:comment "Assignments related to the course."@en.

roboprof:Readings
    a rdfs:Class;
    rdfs:subClassOf roboprof:LectureContent;
    rdfs:label "Readings"@en;
    rdfs:comment "Recommended reading materials for a lecture."@en.

# 2. Topics

roboprof:Topics
    a rdfs:Class;
    rdfs:label "Topic"@en;
    rdfs:comment "A topic covered in a given lecture or course."@en.

roboprof:topicName
    a rdfs:Property;
    rdfs:domain roboprof:Topics;
    rdfs:range rdfs:Literal;
    rdfs:label "topic name"@en;
    rdfs:comment "The name of the topic as mentioned in the source material."@en.

roboprof:provenance
    a rdfs:Property;
    rdfs:domain roboprof:Topics;
    rdfs:range rdfs:Literal;
    rdfs:label "provenance"@en;
    rdfs:comment "Indicates where the topic was identified as being covered in the course."@en.

roboprof:externalLink
    a rdfs:Property;
    rdfs:domain roboprof:Topics;
    rdfs:range rdfs:Resource;
    rdfs:label "external link"@en;
    rdfs:comment "A link to DBpedia or Wikidata for the topic."@en.

roboprof:hastopics
    a rdfs:Property;
    rdfs:domain schema:Course;  
    rdfs:range roboprof:Topics;
    rdfs:label "covers topics"@en;
    rdfs:comment "Topics covered by a given course."@en.

# 3. students

roboprof:Student
    a rdfs:Class;
    rdfs:label "Student"@en;
    rdfs:comment "Information about students including their name, ID, email, completed courses, grades, and competencies."@en.

# student info Properties

roboprof:firstName
    a rdfs:Property;
    rdfs:domain roboprof:Student;
    rdfs:range rdfs:Literal;
    rdfs:label "first name"@en;
    rdfs:comment "The first name of a student"@en.

roboprof:lastName
    a rdfs:Property;
    rdfs:domain roboprof:Student;
    rdfs:range rdfs:Literal;
    rdfs:label "last name"@en;
    rdfs:comment "The last name of a student"@en.

roboprof:idNumber
    a rdfs:Property;
    rdfs:domain roboprof:Student;
    rdfs:range rdfs:Literal;
    rdfs:label "ID number"@en;
    rdfs:comment "The ID number of a student"@en.

roboprof:email
    a rdfs:Property;
    rdfs:domain roboprof:Student;
    rdfs:range rdfs:Literal;
    rdfs:label "email"@en;
    rdfs:comment "The email address of a student"@en.

roboprof:completedCourses
    a rdfs:Property;
    rdfs:domain roboprof:Student;
    rdfs:range schema:Course;
    rdfs:label "completed courses"@en;
    rdfs:comment "Courses that a student has completed"@en.

roboprof:grade
    a rdfs:Property;
    rdfs:domain roboprof:Student;
    rdfs:range rdfs:Literal;
    rdfs:label "grade"@en;
    rdfs:comment "The grade a student achieved in a completed course"@en.
# main properties

roboprof:courses
    a rdfs:Property;
    rdfs:domain dbpedia_o:University;
    rdfs:range schema:Course;
    rdfs:label "courses"@en;
    rdfs:comment "Courses of a university"@en.

# Property to link courses to their lectures

roboprof:lectures
    a rdfs:Property;
    rdfs:domain schema:Course;
    rdfs:range roboprof:Lectures;
    rdfs:label "has lecture"@en;
    rdfs:comment "Associates a course with its lectures."@en.

